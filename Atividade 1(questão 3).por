programa {
  funcao inicio() {
    //Declaração de Variáveis
    real n1, n2, n3, n4, media_aritmetica

    //Entrada de Dados
    escreva("Escreva a nota 1 ")
    leia(n1)
    escreva("Escreva a nota 2 ")
    leia(n2)
    escreva("Escreva a nota 3 ")
    leia(n3)
    escreva("Escreva a nota 4 ")
    leia(n4)

    //Processamento

    media_aritmetica=(n1+n2+n3+n4)/4

    //Saida de Dados
    escreva("A media aritmetica do aluno é: ", media_aritmetica)


  }
}
